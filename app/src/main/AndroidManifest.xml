<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="comp3350.degree_planner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_snail_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <activity android:name=".presentation.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.MainActivity">
            <intent-filter>
                <action android:name=".presentation.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".presentation.DegreesActivity"
            android:label= "Degrees">
        </activity>

        <activity android:name=".presentation.DegreeInfoActivity"
            android:label= "Degree Information">
        </activity>

        <activity android:name=".presentation.CoursePlansActivity"
            android:label= "Course planning">
        </activity>

    </application>

</manifest>